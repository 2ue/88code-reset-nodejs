# E2E 测试环境配置 - 仅 FIRST checkpoint
# 测试场景：只在 18:55 执行重置

# ==================== API 配置 ====================
API_KEYS=test-api-key-e2e-first-12345

# ==================== 检查点配置 ====================
# 只启用 FIRST checkpoint
FIRST_RESET_TIME=18:55
SECOND_RESET_TIME=
TIMEZONE=Asia/Shanghai

# ==================== 重置策略配置 ====================
COOLDOWN_HOURS=5

# ==================== 日志配置 ====================
LOG_LEVEL=info
LOG_FILE_ENABLED=false

# ==================== 速率限制配置 ====================
ENABLE_RATE_LIMIT=false
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=1000
REQUEST_INTERVAL_MS=50

# ==================== 重置验证配置 ====================
RESET_VERIFICATION_WAIT_MS=100

# ==================== 通知配置 ====================
ENABLE_TELEGRAM=false
ENABLE_WECOM=false

# ==================== E2E 测试特殊配置 ====================
NODE_ENV=e2e-test-first
