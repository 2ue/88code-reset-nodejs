{
  "name": "88code-reset-nodejs",
  "version": "0.0.5",
  "description": "88code 自动重置工具 - Node.js 实现，智能额度最大化策略，支持 Docker/PM2/本地运行",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "cp .env.test .env && node tests/run-all.js",
    "test:unit": "cp .env.test .env && node --test tests/unit/**/*.test.js",
    "test:integration": "cp .env.test .env && node --test tests/integration/**/*.test.js",
    "test:watch": "cp .env.test .env && node --test --watch tests/**/*.test.js",
    "test:e2e": "node tests/e2e/run-e2e.js full",
    "test:e2e:full": "node tests/e2e/run-e2e.js full",
    "test:e2e:first": "node tests/e2e/run-e2e.js first-only",
    "test:e2e:second": "node tests/e2e/run-e2e.js second-only",
    "test:e2e:delayed": "node tests/e2e/run-e2e.js delayed",
    "reset:first": "node src/cli.js --first",
    "reset:second": "node src/cli.js --second",
    "reset:stats": "node src/cli.js --stats",
    "reset:test": "node src/cli.js --first --dry-run",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop 88code-reset",
    "pm2:restart": "pm2 restart 88code-reset",
    "pm2:logs": "pm2 logs 88code-reset",
    "docker:build": "docker build -t huby11111/88code-reset-nodejs:latest .",
    "docker:build:local": "docker build -t 88code-reset-nodejs:local .",
    "docker:run": "docker-compose up -d",
    "docker:run:local": "docker-compose -f docker-compose.local.yml up -d",
    "docker:stop": "docker-compose down",
    "docker:stop:local": "docker-compose -f docker-compose.local.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:local": "docker-compose -f docker-compose.local.yml logs -f"
  },
  "keywords": [
    "88code",
    "auto-reset",
    "credits",
    "automation",
    "nodejs"
  ],
  "author": "2ue <jie746635835@163.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "axios": "^1.6.0",
    "dayjs": "^1.11.19",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "p-limit": "^5.0.0",
    "winston": "^3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/2ue/88code-reset-nodejs"
  }
}
