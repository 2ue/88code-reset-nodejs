API_KEYS=88_your_api_key_here_replace_with_real_key
# API密钥（必填，多个用逗号分隔），格式: 88_xxxxxx (40+字符)

FIRST_RESET_TIME=18:55
# 第一次重置检查时间（24小时制），策略：只在resetTimes=2时执行重置，保留重置机会，建议设置为18:50-18:56之间

SECOND_RESET_TIME=23:58
# 第二次重置检查时间（24小时制），策略：resetTimes>=1时执行重置，支持智能延迟重置（冷却未满时自动在冷却结束时重置，支持跨天），必须与第一次检查时间间隔5小时以上

TIMEZONE=Asia/Shanghai
# 时区（IANA时区数据库格式）

COOLDOWN_HOURS=5
# 冷却期（单位：小时），88code官方规定每次重置间隔5小时

API_BASE_URL=https://www.88code.org
# API基础URL

API_TIMEOUT=30000
# 请求超时时间（毫秒）

ENABLE_RETRY=true
# 是否启用重试

MAX_RETRIES=3
# 最大重试次数

RETRY_BASE_DELAY=1000
# 重试延迟基数（毫秒，指数退避）

ENABLE_RATE_LIMIT=true
# 是否启用速率限制

RATE_LIMIT_CAPACITY=10
# 令牌桶容量

RATE_LIMIT_REFILL_RATE=10
# 令牌补充速率（个/分钟）

LOG_LEVEL=info
# 日志级别（error, warn, info, debug）

LOG_FILE_ENABLED=true
# 是否启用文件日志

LOG_DIR=./logs
# 日志目录

LOG_MAX_SIZE=10
# 日志文件最大大小（MB）

LOG_MAX_DAYS=30
# 日志文件保留天数

DATA_DIR=./data
# 数据目录

ENABLE_HISTORY=true
# 是否启用历史记录

HISTORY_MAX_DAYS=90
# 历史记录保留天数

REQUEST_INTERVAL_MS=1000
# 重置请求间隔（毫秒），多个订阅串行重置时的等待时间

RESET_VERIFICATION_WAIT_MS=3000
# 重置后验证等待时间（毫秒），等待88code API更新订阅信息的时间

RATE_LIMIT_WAIT_TIMEOUT=60000
# 速率限制等待超时（毫秒），等待令牌桶分配令牌的最大超时时间

RUN_TEST_ON_START=true
# 是否在启动时执行一次测试
